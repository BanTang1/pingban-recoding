<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="end"
    android:paddingBottom="20dp">

    <LinearLayout
        android:id="@+id/ll_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:orientation="vertical"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/room_rl_header"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="center_horizontal"
            android:background="@mipmap/llm_setting_icom" />

        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/ll_suo"
            android:layout_width="50dp"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginStart="-6dp"
                android:layout_width="50dp"
                android:layout_height="210dp"
                android:background="@mipmap/llm_fc_bg" />
            <LinearLayout
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/cancle"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@mipmap/llm_setting_icom" />

                <ImageView
                    android:id="@+id/iv_home"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@mipmap/llm_fc_home" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="首页"
                    android:layout_marginTop="-6dp"
                    android:textColor="#15151A"
                    android:textSize="7sp" />

                <ImageView
                    android:id="@+id/imgR"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@mipmap/llm_brightness" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="亮度"
                    android:layout_marginTop="-6dp"
                    android:textColor="#15151A"
                    android:textSize="7sp" />

                <ImageView
                    android:id="@+id/imgV"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@mipmap/llm_volume" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-6dp"
                    android:layout_gravity="center_horizontal"
                    android:text="音量"
                    android:textColor="#15151A"
                    android:textSize="7sp" />
            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>

